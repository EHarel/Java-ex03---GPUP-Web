<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>gpupweb.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersListServlet</servlet-name>
        <servlet-class>gpupweb.servlets.UserListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GraphsListServlet</servlet-name>
        <servlet-class>gpupweb.servlets.GraphListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExecutionUploadServlet</servlet-name>
        <servlet-class>gpupweb.servlets.ExecutionUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExecutionListServlet</servlet-name>
        <servlet-class>gpupweb.servlets.ExecutionListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExecutionSubscribeServlet</servlet-name>
        <servlet-class>gpupweb.servlets.ExecutionSubscribeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExecutionStatusUpdateServlet</servlet-name>
        <servlet-class>gpupweb.servlets.ExecutionStatusUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExecutionTargetFetchServlet</servlet-name>
        <servlet-class>gpupweb.servlets.ExecutionTargetFetchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExecutionTargetTaskUpdate</servlet-name>
        <servlet-class>gpupweb.servlets.ExecutionTargetTaskUpdateServlet</servlet-class>
    </servlet>

    <!-- MAPPING -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersListServlet</servlet-name>
        <url-pattern>/userlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GraphsListServlet</servlet-name>
        <url-pattern>/graphlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExecutionUploadServlet</servlet-name>
        <url-pattern>/execution/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExecutionListServlet</servlet-name>
        <url-pattern>/executionlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExecutionSubscribeServlet</servlet-name>
        <url-pattern>/execution/subscribe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExecutionStatusUpdateServlet</servlet-name>
        <url-pattern>/execution/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExecutionTargetFetchServlet</servlet-name>
        <url-pattern>/execution/targets</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExecutionTargetTaskUpdate</servlet-name>
        <url-pattern>/execution/targets/update</url-pattern>
    </servlet-mapping>
</web-app>